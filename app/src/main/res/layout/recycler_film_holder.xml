<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_film_holder_style"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="220dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/poster_recycler_film_holder"
        tools:src="@drawable/terminator2poster"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/name_recycler_film_holder"
        tools:text="Терминатор 2: Судный день"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/name_recycler_film_holder_10sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genre_recycler_film_holder"
        tools:text="Фантастика, боевик"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/name_recycler_film_holder_8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/year_recycler_film_holder"
        tools:text="1991"
        android:textSize="@dimen/name_recycler_film_holder_8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>